<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="searchPane" prefHeight="600.0" prefWidth="1180.0" styleClass="su" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.presentation.controllers.SearchUnemployedGraphic">
   <center>
      <VBox fx:id="box" alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="50.0">
      	 <children>
      	 	<Label alignment="CENTER" text="Find the right job for you, in the place you've always dreamed of." textFill="BLACK">
               <font>
                  <Font name="System bold" size="20.0" />
               </font>
            </Label>
	      	<HBox fx:id="fieldBox" alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="50.0">
		      	 <children>
		            <TextField fx:id="placeSearch" maxWidth="200.0" promptText="Place" />
		            <TextField fx:id="jobSearch" maxWidth="200.0" promptText="Job" />
		         </children>
	     	 </HBox>
	     	 <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#search" text="Search" textFill="BLACK">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System" size="15.0" />
               </font>
            </Button>
	     </children>
	     <padding>
            <Insets top="80.0" bottom="250.0"/>
         </padding>
	  </VBox>
   </center>
</BorderPane>
