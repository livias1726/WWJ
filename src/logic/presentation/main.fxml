<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Cursor?>

<BorderPane fx:id="pane" prefHeight="600.0" prefWidth="1180.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.presentation.controllers.MainGraphic">
   <center>
      <HBox alignment="CENTER" spacing="100.0">
         <children>
            <Button mnemonicParsing="false" onAction="#searchUnemployed" styleClass="btn" text="Unemployed" textFill="BLACK">
               <font>
                  <Font name="System" size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#login" styleClass="btn" text="Recruiter" textFill="BLACK">
               <font>
                  <Font name="System" size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#searchEntrepreneur" styleClass="btn" text="Entrepreneur" textFill="BLACK">
               <font>
                  <Font name="System" size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </center>
</BorderPane>