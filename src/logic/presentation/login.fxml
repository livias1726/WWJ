<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="logPane" prefHeight="600.0" prefWidth="1180.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.presentation.controllers.LoginGraphic">
   <center>
      <VBox fx:id="fields" alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="20.0">
      	 <children>
      	 	<Label alignment="CENTER" text="LOGIN" textFill="BLACK">
               <font>
                  <Font name="System" size="30.0" />
               </font>
            </Label>
            <TextField fx:id="usr" maxWidth="300.0" promptText="Username" />
            <PasswordField fx:id="pwd" maxWidth="300.0" promptText="Password" />
            <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#login" text="Login" textFill="BLACK">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System" size="15.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
